+			pass.Pkg: {
+				Pkg:                   pass.Pkg,
+				Importable:            true,
+				TransitivelyErrorFree: true,
+				Files:                 pass.Files,
+				Errors:                nil,
+				Info:                  info,
+			},
+		},
+	}
+	return prog
+}
