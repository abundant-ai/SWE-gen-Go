+func do2() error {
+	return fmt.Errorf("do2 error")
+}
+
+func someCall() error {
+	err := do()
+	if err != nil {
+		return err
+	}
+	err2 := do2()
+	if err2 != nil {
+		return err // want `return a nil value error after check error`
+	}
+	return nil
